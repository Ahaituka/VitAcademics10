<Page
    x:Class="Template10TestApp.Views.CourseDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Template10TestApp.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel>
            <Viewbox
            Margin="0,100,0,0"
            Width="200"
            Height="200">
                <StackPanel>
                    <TextBlock Name="CourseName" Text="Course Name" HorizontalAlignment="Center" />
                    <TextBlock Name="Attendance" Text="Attendance" HorizontalAlignment="Center"/>
                </StackPanel>
            </Viewbox>
        </StackPanel>
    </Grid>
</Page>
