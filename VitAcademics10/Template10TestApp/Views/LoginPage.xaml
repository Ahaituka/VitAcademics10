<Page
    x:Class="Template10TestApp.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:Template10TestApp.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Page.Background>
        <ImageBrush Stretch="Fill" />
    </Page.Background>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="ms-appx:///Assets/Book.jpg" Stretch="Fill" />
        </Grid.Background>

        <StackPanel Margin="90">

            <TextBox
                Name="RegNo"
                Grid.Row="0"
                Grid.ColumnSpan="2"
                Margin="10"
                controls:TextBoxMask.Mask=""
                Background="{ThemeResource JumpListDefaultEnabledBackground}"
                BorderBrush="White"
                PlaceholderText="Registration Number"
                SelectionHighlightColor="#FF9CBEDA" />
            <PasswordBox
                x:Name="Password"
                Grid.Row="1"
                Grid.ColumnSpan="2"
                Margin="10"
                Background="{ThemeResource JumpListDefaultEnabledBackground}"
                PlaceholderText="Password" />

            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <RadioButton
                    x:Name="Radio_Vellore"
                    Grid.Row="2"
                    Grid.Column="0"
                    Width="120"
                    Height="32"
                    Checked="Radio_Vellore_Checked"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Vellore"
                    GroupName="campus" />
                <RadioButton
                    x:Name="Radio_Chennai"
                    Grid.Row="2"
                    Checked="Radio_Vellore_Checked"
                    Grid.Column="1"
                    Width="120"
                    Height="32"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Content="Chennai"
                    GroupName="campus" />
            </StackPanel>
            <Button
                x:Name="Login_Button"
                Grid.Row="3"
                Grid.ColumnSpan="2"
                Width="100"
                Height="32"
                HorizontalAlignment="Stretch"
                Background="#FF1E4D7C"
                BorderBrush="#FF154EC9"
                Click="Login_Click"
                Content="Login"
                Foreground="White" />
        </StackPanel>



    </Grid>
</Page>
